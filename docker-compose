version: '0.0.1'

services:
  next-app:
    build:
      context: .
      dockerfile: Dockerfile.nextApp
    ports:
      - "3000:3000"
    environment:
      DATABASE_URL: POSTGRES_URL
    depends_on:
      - postgres-db
    networks:
      - app-network

  postgres-db:
    build:
      context: /db
      dockerfile: Dockerfile.pg
    ports:
       - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data # Persist database data
    networks:
      - app-network

networks:
  app-network:
    driver: bridge

volumes:
  postgres_data:
